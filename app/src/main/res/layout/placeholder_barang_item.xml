<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin">

    <View
        android:layout_width="@dimen/circle_image_large"
        android:layout_height="@dimen/circle_image_large"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="@drawable/rounded_placeholder_circle_image" />

    <View
        android:layout_width="@dimen/circle_image_large"
        android:layout_height="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/medium"
        android:background="@drawable/rounded_placeholder_textview" />

    <View
        android:layout_width="@dimen/circle_image_large"
        android:layout_height="@dimen/activity_horizontal_margin"
        android:background="@drawable/rounded_placeholder_textview" />

</LinearLayout>